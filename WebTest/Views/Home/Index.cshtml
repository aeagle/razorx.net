@{
    ViewBag.Title = "Home Page";
}

@functions {
    public enum BoxoutType {
        Standard,
        Bordered
    }
}

@functions {
    public Dictionary<string, object> components = new Dictionary<string, object>();

    public class BoxoutProps {
        BoxoutType Type { get; set; }
    }
}
@{
    RSXViewEngine.RegisterComponent<BoxoutProps>(
        TempData,
        "Boxout",
        (props) => {
            return new MvcHtmlString("<div class=\"lexcomponent-boxout\">");
        },
        (props) => {
            return new MvcHtmlString("</div>");
        }
    );
}

<component component-name="Boxout" type="BoxoutType">
    <div class="lexcomponent-boxout">
        {children}
    </div>
</component>

@{ @Html.Raw(RSXViewEngine.WriteStart<BoxoutProps>(TempData, "Boxout", new BoxoutProps())); }
    <div class="jumbotron">
