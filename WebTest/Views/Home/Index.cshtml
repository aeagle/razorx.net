        <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>
@{ @Html.Raw(RSXViewEngine.WriteEnd<BoxoutProps>(TempData, "Boxout", new BoxoutProps())); }

